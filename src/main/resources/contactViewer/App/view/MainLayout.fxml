<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="550.0" prefWidth="850.0" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="contactViewer.view.MainLayoutController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
					<MenuItem mnemonicParsing="false" onAction="#onHomeMenuPressed" text="Home" />
					<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem mnemonicParsing="false" onAction="#onCloseMenuPressed" text="Close" />
                  		
						
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Panel">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#onListContactMenuPressed" text="Contacts List" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onAddContactMenuPressed" text="Add a Contact" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>